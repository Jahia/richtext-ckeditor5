{
  "extends": "@jahia",
  "root": true,
  "plugins": [
    "json"
  ],
  "rules": {
    "react/boolean-prop-naming": [1, { "rule": "^(is|has)[A-Z]([A-Za-z0-9]?)+" }],
    "react-hooks/exhaustive-deps": [2]
  },
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "parserOpts": {
        "plugins": ["jsx"]
      }
    }
  }
}
